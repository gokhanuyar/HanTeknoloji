
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@using PagedList;
@using PagedList.Mvc;
@model IPagedList<ReportVM>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Ürün Satış Rapor Sayfası</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-2">
        <div class="form-group">
            <h4>Günlük Satışlar İçin Tarih Seçimi</h4>
            <form method="post" id="form_date">
                <input name="date" id="date" type="date" class="form-control" />
            </form>
            
        </div>
    </div>
    <div class="col-lg-2">
        <div class="form-group">
            <h4>Aylık Satışlar İçin Tarih Seçimi</h4>
            <form method="post" id="form_month">
                <input name="date" id="month" type="month" class="form-control" />
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-3">
        <h4>Satılan Ürün Adedi : @ViewBag.quantity</h4>
        <h4>Alış Birim Fiyat Toplamı : @ViewBag.unitprice</h4>
        <h4>Toplam KDV : @ViewBag.kdv</h4>
        <h4>Satış Fiyat Toplamı : @ViewBag.saleprice</h4>
        <h4>Brüt Kar : @ViewBag.brut</h4>        
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>@ViewBag.date</b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Alış Birim Fiyat</th>
                                <th>Satış Birim Fiyat</th>
                                <th>Adet</th>
                                <th>KDV</th>
                                <th>Satış Toplam</th>
                                <th>Tarih</th>
                                <th>Saat</th>
                                <th>Personel</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int sayi = 1;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@sayi</td>
                                    <td>@item.Product.TradeMark</td>
                                    <td>@item.Product.ProductModel</td>
                                    <td>@item.Product.UnitPrice</td>
                                    <td>@item.Product.UnitSalePrice</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.KdvPrice</td>
                                    <td>@item.Price</td>
                                    <td>@item.SaleDate</td>
                                    <td>@item.SaleTime</td>
                                    <td>@item.AdminUserName</td>
                                </tr>
                                sayi++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.PagedListPager(Model, page => Url.Action("ProductSale", "AdminReport", new { page = page, id = ViewBag.Statuid }))
@section scripts{
    <script>
        $("#date").change(function () {
            $("#form_date").submit();
            //console.log($(this).val())
        })
        $("#month").change(function () {
            $("#form_month").submit();
        })
    </script>
}
