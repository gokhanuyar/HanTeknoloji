
@{
    ViewBag.Title = "Service";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@using PagedList;
@using PagedList.Mvc;
@model IPagedList<ReportVM>

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Servis/Yardım Rapor Sayfası</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-3">
        <div class="form-group">
            <h5>Günlük İşlemler İçin Tarih Seçimi</h5>
            <form method="post" id="form_date">
                <input name="date" id="date" type="date" class="form-control" />
            </form>

        </div>
    </div>
    <div class="col-lg-3">
        <div class="form-group">
            <h5>Aylık İşlemler İçin Tarih Seçimi</h5>
            <form method="post" id="form_month">
                <input name="date" id="month" type="month" class="form-control" />
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-2">
        <h5>İşlem Adedi</h5>
        <h5>Toplam Tutar</h5>
    </div>
    <div class="col-lg-2">
        <h5>: @ViewBag.quantity</h5>
        <h5>: @ViewBag.saleprice TL</h5>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>@ViewBag.date</b>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Servis Bedeli</th>
                                <th>Ödeme Şekli</th>
                                <th>Tarih</th>
                                <th>Saat</th>
                                <th>Not</th>
                                <th>Personel</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int sayi = 1;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@sayi</td>
                                    <td>@item.Price</td>
                                    <td>@item.PaymentType</td>
                                    <td>@item.SaleDate</td>
                                    <td>@item.SaleTime</td>
                                    <td>@item.Note</td>
                                    <td>@item.AdminUserName</td>
                                </tr>
                                sayi++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.PagedListPager(Model, page => Url.Action("Service", "AdminReport", new { page = page, id = ViewBag.Statuid }))
@section scripts{
    <script>
        $("#date").change(function () {
            $("#form_date").submit();
        })
        $("#month").change(function () {
            $("#form_month").submit();
        })
    </script>
}

