
@{
    ViewBag.Title = "SupplierReport";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@using PagedList;
@using PagedList.Mvc;
@model IPagedList<ReportVM>

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Ürün Alım Rapor Sayfası</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-3">
        <div class="form-group">
            <h5>Tedarikçi Seçimi</h5>
            <form method="post" id="form">
                @Html.DropDownList("id", (IList<SelectListItem>)ViewData["supplier"], "Tedarikçi Seçiniz", new { @class = "form-control select2" })
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-2">
        <h5>Alınan Ürün Adedi</h5>
        <h5>Alış Fiyat Toplamı</h5>
    </div>
    <div class="col-lg-6">
        <h5>: @ViewBag.quantity</h5>
        <h5>: @ViewBag.saleprice TL</h5>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>@ViewBag.supplierName</b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Birim Fiyat</th>
                                <th>Adet</th>
                                <th>Toplam</th>
                                <th>Tarih</th>
                                <th>Saat</th>
                                <th>Ödeme Şekli</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int sayi = 1;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@sayi</td>
                                    <td>@item.Product.TradeMark</td>
                                    <td>@item.Product.ProductModel</td>
                                    <td>@item.UnitBuyPrice</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price</td>
                                    <td>@item.SaleDate</td>
                                    <td>@item.SaleTime</td>
                                    <td><button onclick="GetDetails(@item.ID)" class="btn btn-info btn-sm">Detay</button></td>
                                </tr>
                                sayi++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.PagedListPager(Model, page => Url.Action("SupplierReport", "AdminReport", new { page = page, id = ViewBag.Statuid }))

@section scripts{
    <script>
        $("#id").change(function () {
            $("#form").submit();
        })

        function GetDetails(id) {
            $.ajax({
                type: "get",
                url: "/Admin/AdminExpiry/GetPaymentDetails/" + id,
                success: function (result) {
                    switch (result.Payment) {
                        case "Kredi Kartı":
                            break;
                        case "Havale":
                            break;
                        case "Vadeli":
                            break;
                        case "Çek":
                    }
                    $("#myModal").modal("show");
                }
            })
        }
    </script>
}

