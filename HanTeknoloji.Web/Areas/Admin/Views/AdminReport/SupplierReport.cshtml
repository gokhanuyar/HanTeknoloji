
@{
    ViewBag.Title = "SupplierReport";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@using PagedList;
@using PagedList.Mvc;
@model IPagedList<ReportVM>

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Ürün Satış Rapor Sayfası</h3>
    </div>
</div>
<div class="row">
    <div class="col-lg-3">
        <div class="form-group">
            <h5>Günlük Satışlar İçin Tarih Seçimi</h5>
            <form method="post" id="form_date">
                <input name="date" id="date" type="date" class="form-control" />
            </form>

        </div>
    </div>
    <div class="col-lg-3">
        <div class="form-group">
            <h5>Aylık Satışlar İçin Tarih Seçimi</h5>
            <form method="post" id="form_month">
                <input name="date" id="month" type="month" class="form-control" />
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-2">
        <h5>Satılan Ürün Adedi</h5>
        <h5>Alış Birim Fiyat Toplamı</h5>
        <h5>Toplam KDV</h5>
        <h5>Satış Fiyat Toplamı</h5>
        <h5>Brüt Kar</h5>
    </div>
    <div class="col-lg-6">
        <h5>: @ViewBag.quantity</h5>
        <h5>: @ViewBag.unitprice TL</h5>
        <h5>: @ViewBag.kdv TL</h5>
        <h5>: @ViewBag.saleprice TL</h5>
        <h5>: @ViewBag.brut TL</h5>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>@ViewBag.customer</b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Ürün Marka/Modeli</th>
                                <th>Adet</th>
                                <th>Birim Fiyat</th>
                                <th>Toplam Tutar</th>
                                <th>Tarih</th>
                                <th>Saat</th>
                                <th>Ödeme Şekli</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Product.TradeMark</td>
                                    <td>@item.Product.ProductModel</td>
                                    <td>@item.UnitBuyPrice</td>
                                    <td>@item.UnitSalePrice</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.KdvPrice</td>
                                    <td>@item.Price</td>
                                    <td>@item.PaymentType</td>
                                    <td>@item.SaleDate</td>
                                    <td>@item.SaleTime</td>
                                    <td>@item.AdminUserName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.PagedListPager(Model, page => Url.Action("ProductSale", "AdminReport", new { page = page, id = ViewBag.Statuid }))

