
@model CustomerVM

<div class="col-lg-12">
    <div class="form-group">
        @Html.LabelFor(x => x.TCNo)
        @Html.TextBoxFor(x => x.TCNo, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TCNo)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Name)<span style="color:red"> *</span>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.CityID)<span style="color:red"> *</span>
        @Html.DropDownListFor(x => x.CityID, (IList<SelectListItem>)ViewData["city"], new { @class = "form-control select2" })
        @Html.ValidationMessageFor(x => x.CityID)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.RegionID)<span style="color:red"> *</span>
        @Html.DropDownListFor(x => x.RegionID, (IList<SelectListItem>)ViewData["region"], new { @class = "form-control select2" })
        @Html.ValidationMessageFor(x => x.RegionID)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Address)<span style="color:red"> *</span>
        @Html.TextAreaFor(x => x.Address, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.Address)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Phone)<span style="color:red"> *</span>
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.Phone)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.TaxOffice)
        @Html.TextBoxFor(x => x.TaxOffice, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TaxOffice)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.TaxNumber)
        @Html.TextBoxFor(x => x.TaxNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TaxNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.IsPerson)
        <select name="IsPerson" class="form-control">
            <option value="true">Şahıs</option>
            <option value="false">Şirket</option>
        </select>
        @Html.ValidationMessageFor(x => x.IsPerson)
    </div>
    <input type="submit" class="btn btn-success" value="Kayıt" />
</div>
