
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@section css{
    <link href="~/Areas/Admin/Content/custom/sale-page.css" rel="stylesheet" />
}

<div class="wrapper">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#home" data-toggle="tab">Ürün Satış</a>
        </li>
        <li>
            <a href="#profile" data-toggle="tab">Servis / Yardım</a>
        </li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane fade in active" id="home">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Ürün Satış Ekranı</h2>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    @Html.Partial("/Areas/Admin/Views/Shared/Partial/MessagesPart.cshtml")
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Ürün Satış Formu
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                @Html.Partial("Partial/SaleForm")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="profile">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Servis Ücreti</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    @Html.Partial("/Areas/Admin/Views/Shared/Partial/MessagesPart.cshtml")
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Servis Hizmet Formu
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    @Html.Partial("Partial/ServiceSaleForm")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("Partial/Modal")

@section scripts{
    <script src="~/Scripts/dateFormat.min.js"></script>
    <script src="~/Areas/Admin/Scripts/custom/sale-operations.js"></script>
}