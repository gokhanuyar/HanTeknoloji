

@model ProductModelVM

<div class="col-lg-12">
    <div class="form-group">
        @Html.LabelFor(x => x.TradeMarkID)<span style="color:red"> *</span>
        @Html.DropDownListFor(x => x.TradeMarkID, (IList<SelectListItem>)ViewData["trademark"], new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.TradeMarkID)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Name)<span style="color:red"> *</span>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.BarcodeValue)<span style="color:red"> *</span>
        @Html.TextBoxFor(x => x.BarcodeValue, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.BarcodeValue)


    </div>
    <input type="submit" class="btn btn-primary" value="Kayıt" />
</div>
