
@{
    ViewBag.Title = "BarCode";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@model HanTeknoloji.Web.Areas.Admin.Models.Barcode.BarCodeModel
<style>
    .container-fluid {
        margin-top: 50px;
    }

    #btn-row {
        margin-top: 30px;
    }
</style>
<div class="container-fluid">
    <div class="col-lg-4">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                Ürün Barkodu
            </div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <div>
                        <img id="barcode" src="@Model.ImageUrl" />
                    </div>
                </div>
                <div class="col-lg-12" id="btn-row">
                    <button class="btn btn-warning" id="print">Yazdır</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Areas/Admin/Scripts/printer.js"></script>
    <script>
        $("#print").click(function () {
            $("#barcode").print();
        });
    </script>
}


