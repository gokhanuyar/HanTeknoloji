


@model TechnicalServiceCostVM
<div class="col-lg-12">
    <div class="form-group">
        @Html.LabelFor(x => x.CostDateString)<span style="color:red"> *</span>
        @Html.TextBoxFor(x => x.CostDateString, new { @class = "form-control", @readonly = "true" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Cost)<span style="color:red"> *</span>
        @Html.TextBoxFor(x => x.Cost, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.Cost)
    </div>
    <input type="submit" class="btn btn-primary" value="Kayıt" />
</div>
