
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Kategori Düzenleme</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        @Html.Partial("/Areas/Admin/Views/Shared/Partial/MessagesPart.cshtml")
        <div class="panel panel-default">
            <div class="panel-heading">
                Kategori Düzenleme Formu
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Edit", "AdminCategory", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            @Html.Partial("Partial/CategoryForm")
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

