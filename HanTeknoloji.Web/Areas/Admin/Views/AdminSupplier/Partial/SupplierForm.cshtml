

@model SupplierVM

<div class="col-lg-12">
    <div class="form-group">
        @Html.LabelFor(x => x.CompanyName)<span style="color:red"> *</span>
        @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.CompanyName)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.CityID)<span style="color:red"> *</span>
        @Html.DropDownListFor(x => x.CityID, (IList<SelectListItem>)ViewData["city"], new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.CityID)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.RegionID)<span style="color:red"> *</span>
        @Html.DropDownListFor(x => x.RegionID, (IList<SelectListItem>)ViewData["region"], new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.RegionID)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Address)<span style="color:red"> *</span>
        @Html.TextAreaFor(x => x.Address, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.Address)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Phone)<span style="color:red"> *</span>
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(x => x.Phone)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Fax)
        @Html.TextBoxFor(x => x.Fax, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Fax)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.WebSite)
        @Html.TextBoxFor(x => x.WebSite, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WebSite)
    </div>
    <input type="submit" class="btn btn-success" value="Kayıt" />
</div>
