
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Tedarikçi Ekleme</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        @Html.Partial("/Areas/Admin/Views/Shared/Partial/MessagesPart.cshtml")
        <div class="panel panel-default">
            <div class="panel-heading">
                Tedarikçi Ekleme Formu
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Add", "AdminSupplier", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            @Html.Partial("Partial/SupplierForm")
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Areas/Admin/Scripts/custom/region.js"></script>
}
